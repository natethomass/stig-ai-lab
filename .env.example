# ============================================================
# STIG AI Lab - Configuration
# ============================================================

# Ollama model to use (must be pulled first via: ollama pull <model>)
# Recommended: llama3.1, mistral, or codellama for better security reasoning
OLLAMA_MODEL=llama3.1
OLLAMA_BASE_URL=http://localhost:11434

# STIG Profile to scan against
# Options: stig, stig_gui, ospp, pci-dss, cis, cis_server_l1, hipaa
STIG_PROFILE=stig

# Path to SCAP content (default for RHEL 9)
SCAP_CONTENT_PATH=/usr/share/xml/scap/ssg/content/ssg-rhel9-ds.xml

# Directory to store scan results
REPORTS_DIR=./reports

# Ansible playbook output directory
PLAYBOOKS_DIR=./playbooks

# Minimum severity to act on: CAT_I, CAT_II, CAT_III (or ALL)
MIN_SEVERITY=CAT_II

# Require explicit user approval before applying fixes
REQUIRE_APPROVAL=true

# Dry run mode - show what would be done without applying changes
DRY_RUN=false
